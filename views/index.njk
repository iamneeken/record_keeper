<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/public/css/style.css" />
    <title>Record Keeping</title>
  </head>
  <body>
    <main>
      <section class="glass">
        <div class="recordKeeper">
          <div class="user">
            <img src="/public/img/Manil.jpg" alt="" height="70" width="70" />
            <h3>Manil Maharjan</h3>
          </div>

          <form action="">
            <h1 class="title">Add new Records</h1>

            <div>
              <label for="item">Name of the item</label>
              <div></div>
              <input type="text" id="item" placeholder="Item Name" />
            </div>
            <div>
              <label for="quantity">Quantity</label>
              <div></div>
              <input type="number" id="quantity" placeholder=" Quantity" />
            </div>

            <div>
              <label for="price">Price</label>
              <div></div>
              <input type="number" id="price" placeholder="Price" />
            </div>

            <div>
              <label for="moreInfo">Additional Info</label>
              <div></div>
              <textarea
                type="text"
                id="moreInfo title='Edit'"
                placeholder="Additional information"></textarea>

            </div>
            <div>
              <button class="saveBtn" >Save</button>
            </div>
          </form>
        </div>

        <!-- Record shower -->

        <div class="recordShower">
        
          <div class="searchBar">
            <input type="text" placeholder="Search"/>
          </div>

          <div class="table_responsive">
            <table>
              <thead>
                <tr>
                  <th>SN</th>
                  <th>Name</th>
                  <th>Quantity</th>
                  <th>Additional Info</th>
                  <th>Price</th>
                  <th>Option</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>01</td>
                  <td>Pant</td>
                  <td>1</td>
                  <td>Rs.100 left</td>
                  <td>RS.1222</td>
                  <td>
                    <span class="action_btn">
                      <a href="#" title='Edit'><i class="fa-solid fa-pen-to-square"></i></a>
                      <a href="#" title='Delete'><i class="fa-solid fa-trash-can"></i></a>
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
          
        </div>
      </section>

      
      <div class="circle1"></div>
      <div class="circle2"></div>
    </main>

    <div>
     
    </div>
  </body>
</html>
